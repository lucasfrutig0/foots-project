---
import { Hero } from "../components/Hero";
import { SelectLeague } from "../components/SelectLeague";
import FooterLayout from "./FooterLayout.astro";
import Header from "./HeaderLayout.astro";
import SideBarMenuLayout from "./SideBarMenuLayout.astro";

const {title} = Astro.props
---


<html lang="pt-BR">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="
		bg-nord-polar-night-900
		min-h-screen 
		overflow-x-hidden
		dark:bg-gradient-to-tr from-nord-polar-night-700 to-gray-800
		dark:text-nord-snow-storm-500
		text-nord-polar-night-900
	">
		<div class="flex h-full mb-6 md:mb-4 flex-col md:grid md:grid-cols-new2">
			<div>
				<SideBarMenuLayout />
			</div>
			<div class="flex-1 container mx-auto px-4">
				<main>
					<Header />
					<Hero client:load/>
					<div class="flex flex-col gap-4 md:grid md:grid-cols-3 md:gap-4">
						<slot />
					</div>
				</main>
			</div>
		</div>
		<FooterLayout />
		<script src="/src/index.ts"></script>
	</body>
</html>
