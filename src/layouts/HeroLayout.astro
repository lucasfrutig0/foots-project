---
const {leagueName, leagueLogo} = Astro.props
---

<section class="overflow-hidden col-span-full">
  <div class="flex items-center gap-3 w-full p-2">
    <img
      src={leagueLogo}
      alt=""
      class={`bg-nord-snow-storm-100 w-20 h-20 p-1 rounded-full ring-2 ring-gray-300 dark:ring-gray-500`}
    />
    <div class="flex flex-col">
      <small class="uppercase">competição</small>
      <h1 class={`text-2xl md:text-4xl font-black uppercase`}>
        {leagueName}
      </h1>
    </div>
  </div>
</section>